pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {

        stage('Setup') {
            steps {
                script {
                    // Create virtual environment if it doesn't exist
                    if (!fileExists("${env.WORKSPACE}\\${VIRTUAL_ENV}")) {
                        bat "python -m venv ${VIRTUAL_ENV}"
                    }

                    // Activate and install dependencies
                    bat "call ${VIRTUAL_ENV}\\Scripts\\activate && python -m pip install --upgrade pip && pip install -r requirements.txt && pip install pytest coverage bandit flake8"
                }
            }
        }

        stage('Lint') {
            steps {
                script {
                    echo "Running flake8 linting..."
                    bat "call ${VIRTUAL_ENV}\\Scripts\\activate && flake8 app.py"
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo "Running unit tests..."
                    bat "call ${VIRTUAL_ENV}\\Scripts\\activate && pytest"
                }
            }
        }

        stage('Coverage') {
            steps {
                script {
                    echo "Running coverage analysis..."
                    bat "call ${VIRTUAL_ENV}\\Scripts\\activate && coverage run -m pytest && coverage report && coverage html"
                    echo "Code coverage report generated successfully."
                }
            }
        }

        stage('Security Scan') {
            steps {
                script {
                    echo "Running Bandit security scan..."
                    // Bandit warnings no longer fail the pipeline
                    bat "call ${VIRTUAL_ENV}\\Scripts\\activate && bandit -r . -f txt -o bandit_report.txt || exit 0"
                    echo "Security scan completed. Report saved as bandit_report.txt."
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying application to local environment..."
                    bat "call ${VIRTUAL_ENV}\\Scripts\\activate && python app.py"
                    echo "Deployment successful."
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning workspace..."
            cleanWs()
        }
    }
}
